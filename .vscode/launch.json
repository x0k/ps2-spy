    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cmd/ps2-spy/",
            "env": {
                "CGO_ENABLED": "0"
            },
            "envFile": "${workspaceFolder}/.env.local",
            "args": [
                "--config",
                "${workspaceFolder}/config/dev.yml"
            ]
        }
    ]
}